<h2>Danh sách nhà cung cấp</h2>

<!-- Form tìm kiếm / lọc -->
<form method="GET" action="/suppliers">
    <input type="text" name="q" placeholder="Tìm theo tên..." value="<%= q || '' %>">
    <button type="submit">Tìm</button>
</form>

<% if (user) { %>
    <a href="/suppliers/create">Thêm nhà cung cấp</a>
    <% } %>

        <ul>
            <% if (suppliers && suppliers.length) { %>
                <% suppliers.forEach(s => { %>
                    <li>
                        <%= s.name %> -
                            <%= s.address %> -
                                <%= s.phone %>
                                    <% if (user) { %>
                                        | <a href="/suppliers/<%= s._id %>/edit">Sửa</a>
                                        <form action="/suppliers/<%= s._id %>/delete" method="POST" style="display:inline">
                                            <button type="submit" onclick="return confirm('Bạn có chắc muốn xóa?')">Xóa</button>
                                        </form>
                                        <% } %>
                    </li>
                    <% }) %>
                        <% } else { %>
                            <li>Chưa có nhà cung cấp nào</li>
                            <% } %>
        </ul>